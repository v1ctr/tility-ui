{
  "name": "@tility-ui/theme",
  "description": "Default styling for tility-ui components",
  "version": "0.1.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "homepage": "https://github.com/v1ctr/tility-ui#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/v1ctr/tility-ui",
    "directory": "packages/theme"
  },
  "bugs": {
    "url": "https://github.com/v1ctr/tility-ui/issues"
  },
  "keywords": [
    "react",
    "react-ui",
    "design-system",
    "tailwind",
    "tailwindcss",
    "tility-ui"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react",
    "dev": "tsup src/index.tsx --format esm,cjs --watch --dts --external react",
    "lint": "TIMING=1 eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@tility-ui/utils": "workspace:*"
  },
  "peerDependencies": {
    "tailwindcss": "^3"
  },
  "devDependencies": {
    "@tility-ui/tsconfig": "workspace:*",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "eslint": "^8.15.0",
    "eslint-config-tility": "workspace:*",
    "react": "^18.1.0",
    "tsup": "^5.10.1",
    "typescript": "^4.5.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
